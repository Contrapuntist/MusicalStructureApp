<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:contentDescription="@string/header_img"
                android:scaleType="centerCrop"
                android:src="@drawable/recordplayerbkg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="24dp"
                android:background="#aa0A2A5A"
                android:fontFamily="@font/comfortaa_regular"
                android:padding="16dp"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:textSize="36sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/artists_btn"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:background="#0244A6"
                android:fontFamily="@font/comfortaa_light"
                android:text="@string/artists"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="28sp" />

            <Button
                android:id="@+id/albums_btn"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:background="#6C8D02"
                android:fontFamily="@font/comfortaa_light"
                android:text="@string/albums"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/songs_btn"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:background="#734F22"
                android:fontFamily="@font/comfortaa_light"
                android:text="@string/songs"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="28sp" />

            <Button
                android:id="@+id/playlists_btn"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:background="#0A2A5A"
                android:fontFamily="@font/comfortaa_light"
                android:text="@string/playlists"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="28sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>