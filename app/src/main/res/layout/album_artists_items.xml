<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/artists_albums_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_16">

        <TextView
            android:id="@+id/top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/comfortaa_regular"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/main_list_text_size"
            tools:text="Metallica" />

        <TextView
            android:id="@+id/bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_text"
            android:layout_marginTop="@dimen/margin_4"
            android:fontFamily="@font/comfortaa_light"
            android:textAllCaps="true"
            android:textColor="@color/lighter_blue"
            android:textSize="@dimen/subtext_list_text_size"
            tools:text="...And Justice For All" />

        <ImageButton
            android:layout_width="@dimen/icon_dimen"
            android:layout_height="@dimen/icon_dimen"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_play_circle_outline_black_24dp" />

</RelativeLayout>